<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="ru.nehodov.weatherforecast.utils.WeatherUtilKot"/>
        <variable
            name="daily"
            type="ru.nehodov.weatherforecast.entities.Daily" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="2dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textDailyDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{WeatherUtilKot.formatDate(daily.getDateTime())}"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:text="Пн 24.08" />

                <ImageView
                    android:id="@+id/imgDailyWeather"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    app:loadWeatherIcon="@{daily}"
                    app:isMini="@{true}"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/txtMaxDailyTemp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginStart="16dp"
                    android:text="@{WeatherUtilKot.formatTemp(daily.getTemp().getMax())}"
                    android:textColor="@color/white"
                    tools:text="+15" />

                <TextView
                    android:id="@+id/txtMinDailyTemp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    android:text="@{WeatherUtilKot.formatTemp(daily.getTemp().getMin())}"
                    android:textColor="@color/white"
                    tools:text="+10" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>