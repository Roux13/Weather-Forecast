<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="ru.nehodov.weatherforecast.utils.WeatherUtilKot"/>
        <import type="java.util.List"/>
        <variable
            name="viewmodel"
            type="ru.nehodov.weatherforecast.viewmodels.ForecastViewModelKot" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/details_background"
        tools:context=".ui.DetailsFragment">

        <TextView
            android:id="@+id/detailsDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@{WeatherUtilKot.formatDate(viewmodel.dailyForecast[viewmodel.selectedDay].getDateTime())}"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/today" />

        <TextView
            android:id="@+id/updateTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@{String.format(@string/time_update_pattern, WeatherUtilKot.formatTime(viewmodel.timeUpdate))}"
            app:layout_constraintEnd_toEndOf="@+id/detailsDateTV"
            app:layout_constraintStart_toStartOf="@+id/detailsDateTV"
            app:layout_constraintTop_toBottomOf="@+id/detailsDateTV"
            tools:text="Updated: (19:34)" />

        <TextView
            android:id="@+id/weatherDescriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@{viewmodel.dailyForecast[viewmodel.selectedDay].getWeather()[0].getDescription()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updateTimeTV"
            tools:text="Cloudy" />

        <ImageView
            android:id="@+id/detailsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/weather_icon"
            app:loadWeatherIcon="@{viewmodel.dailyForecast[viewmodel.selectedDay]}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weatherDescriptionTV"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/detailsTempTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold"
            android:text="@{WeatherUtilKot.formatTemp(viewmodel.dailyForecast[viewmodel.selectedDay].getTemp().getMax())}"
            app:layout_constraintStart_toEndOf="@+id/updateTimeTV"
            app:layout_constraintTop_toBottomOf="@+id/weatherDescriptionTV"
            tools:text="+15" />

        <TextView
            android:id="@+id/feelsLikeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@{String.format(@string/feels_like_pattern, WeatherUtilKot.formatTemp(viewmodel.dailyForecast[viewmodel.selectedDay].getFeelsLike().getDay()))}"
            app:layout_constraintStart_toStartOf="@+id/detailsTempTV"
            app:layout_constraintTop_toBottomOf="@+id/detailsTempTV"
            tools:text="Feels like: +11" />

        <TextView
            android:id="@+id/humidityTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:textColor="@color/white"
            android:text="@{String.format(@string/humidity_pattern, viewmodel.dailyForecast[viewmodel.selectedDay].getHumidity())}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feelsLikeTV"
            tools:text="Humidity: 34%" />

        <TextView
            android:id="@+id/uviTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@{String.format(@string/uvi_pattern, viewmodel.dailyForecast[viewmodel.selectedDay].getUvi())}"
            app:layout_constraintStart_toStartOf="@+id/windSpeedTv"
            app:layout_constraintTop_toTopOf="@+id/humidityTV"
            tools:text="UVI: 9.17" />

        <TextView
            android:id="@+id/pressureTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:text="@{String.format(@string/pressure_pattern, viewmodel.dailyForecast[viewmodel.selectedDay].getPressure())}"
            app:layout_constraintStart_toStartOf="@+id/humidityTV"
            app:layout_constraintTop_toBottomOf="@id/humidityTV"
            tools:text="Pressure: 1009 pa" />

        <TextView
            android:id="@+id/windSpeedTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/white"
            android:text="@{String.format(@string/wind_wpeed_pattern, viewmodel.dailyForecast[viewmodel.selectedDay].getWindSpeed())}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/uviTv"
            tools:text="Wind speed: 2.53 m/sec" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>